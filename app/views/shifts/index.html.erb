<% content_for :title, @title = t('shifts.index.title') %>
<% content_for :additional_formats, "csv" if current_person.has_role? 'admin' %>


<h2><%= t('shifts.index.summary', total: @shifts.size, enabled: @shifts.collect(&:enabled).size) %></h2>
<p><em><%=  t('shifts.index.advice_weeks_responsability_not_listed') %></em></p>
<table>
  <tr>
    <th><%=t 'shift.attributes.day' %></th>
    <th><%=t 'shift.attributes.shiftinfo' %></th>
    <th><%=t 'shift.attributes.person' %></th>
  </tr>

  <%= render( partial: "shift_tr", collection: @shifts ) %>
</table>

