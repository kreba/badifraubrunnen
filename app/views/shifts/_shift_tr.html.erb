<% shift = shift_tr %>
<tr>

  <td><%= shift.day.date_str('%a %d.%m.') %></td>
  <td><%= full_descr(shift.shiftinfo, "%s,  %s") %></td>
  <td><%= shift.free? ? '<' + t('shifts.free') + '>' : shift.person.name %></td>

  <% if current_person.is_admin_for? shift.saison %>
    <td><%= link_to( t('Edit') , shift.day )%></td>
  <% end %>

</tr>
