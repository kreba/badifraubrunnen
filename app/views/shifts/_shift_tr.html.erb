<% shift = shift_tr %>
<tr>

  <td><%=h shift.day.date_str('%a %d.%m.') %></td>
  <td><%=h "#{shift.shiftinfo.description},  #{shift.shiftinfo.times_str}"  %></td>
  <td><%=h shift.free? ? '<' + t('shifts.free') + '>' : shift.person.name %></td>

  <% if current_person.is_admin_for? shift.saison %>
    <td><%= link_to( t('Edit') , shift.day )%></td>
  <% end %>

</tr>
