<% form_for(person) do |f| %><div>
	<div style="float: left; margin-right: 2em;">
	
		<p><label for="name"><%=l 'person','attributes','name' %></label><br/>
		<%= f.text_field( :name )%></p>

		<p><label for="phone"><%=l 'person','attributes','phone' %></label><br/>
		<%= f.text_field( :phone )%></p>

		<p><label for="phone2"><%=l 'person','attributes','phone2' %></label><br/>
		<%= f.text_field( :phone2 )%></p>

		<p><label for="address"><%=l 'person','attributes','address' %></label><br/>
		<%= f.text_field( :address )%></p>

		<p><label for="postal_code"><%=l 'person','attributes','postal_code' %></label>/<label for="location"><%=l 'person','attributes','location' %></label><br/>
		<%= f.text_field( :postal_code, :size =>  5 )%>
		<span id="location_field_container"><%= f.text_field( :location, :size => 21 )%></span></p>

		<%= observe_field( 'person_postal_code', 
						:url => { :action => :find_location },
						:frequency => 0.5,
						:with => "'zip='+escape(value)" )%>
		
		<% if current_person.is_badiAdmin? %>
			<p><label for="preferences"><%=l 'people','preferences_label' %></label><br />
			<%= f.text_field( :preferences, :rows => 4, :size => 67 )%></p>
		<% end %>

	</div><div style="float: left; margin-right: 2em;">
	
		<p><label for="login"><%=l 'person','attributes','login' %></label><br/>
		<%= f.text_field( :login )%></p>

		<p><label for="email"><%=l 'person','attributes','email' %></label><br/>
		<%= f.text_field( :email )%></p>

		<p><label for="password"><%=l 'people','password_label' %></label><br/>
		<%= f.password_field( :password )%></p>

		<p><label for="password_confirmation"><%=l 'people','password_confirmation_label' %></label><br/>
		<%= f.password_field( :password_confirmation )%></p>

	</div><div style="clear: left;">
		
		<p><%= submit_tag( l('Save') )%>
		<em> <%=l 'save_button_remark' %> </em></p>
		
	</div>
</div><% end %>