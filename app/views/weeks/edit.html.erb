<% content_for :title, @title = t('weeks.title') %>
<% content_for :links do %><li><%= link_to( t('weeks.show.title'), @week )%></li><% end %>


<% form_for(@week) do |f| %>
  <p>
    <% if current_person.is_badiAdmin? %>
      <b><%=t 'weeks','responsability' %>:</b><br />
      <%= f.select( :person_id, @people.collect {|p| [ p.name, p.id ] }, { :include_blank => true } ) %>
    <% else %>
	    <h2><%=h t('weeks.general_advice', :wnum => @week.number.to_s ) %></h2>
	    <%= f.hidden_field :person_id, :value => current_person.id %>
		<% end %>
  </p>
	
	<p>
	  <%= f.submit t('Save') %><br />
	</p>
<% end %>
<p><br /><%= button_to( t('Abort'), week_day_path(@week,@day) ) %></p>

<% unless current_person.is_badiAdmin? %>
	<p><em>
		<%= t('weeks.warning', :badiAdmin => @admin_names).gsub("\n","<br />") %><br />
		<%= link_to( t('help.contact.title') , :controller => 'help', :action => 'contact' )%><br />
		<br />
		<%=t 'weeks.how_to_abort' %>
	</em></p>
<% end %>
