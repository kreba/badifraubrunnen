<span class="week_plan_shift" style="<%= @dd.style_for_shift(shift) %>">
  <% if shift.free? %>
    <% unless @printout %>
    
      <% if current_person.is_admin_for?(saison) %>
        <%= cell_link_to( t('shifts.sign_up'), day_path(shift.day) ) %>
      <% elsif current_person.is_staff_for?(saison) and shift.can_staff_sign_up? %>
        <%= cell_link_to( t('shifts.sign_up'), edit_shift_path(shift) ) %>
      <% else %>
        <p class="noprint">vakant</p>
      <% end %>
      
    <% end %>
  <% else %>
    <p class="person_name"><%= shift.person.name %></p>
    <p class="person_phone_numbers"><%= phone_str(shift.person, delimiter: '<br />') %></p>
  <% end %>
</span> 
