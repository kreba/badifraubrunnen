<% 
	shift = week_plan_shift
	v_offset = shift.shiftinfo.description == "Pikett" ? -0.5*hour_height : -9.5*hour_height
	bg_color = shift.free? ? "#aaffaa" : "#eeeeee"
	top = hour_height * shift.time_to_begin/3600.0 + v_offset - 1 #border
	height = hour_height * shift.duration/3600.0 #padding
%>

<span class="week_plan_shift" style="<%= "top: #{top}px; height: #{height}px; background: #{bg_color};" %>">
	<% if shift.free? %>
		<% if !current_person.is_badiStaff? or current_person.is_badiAdmin? %>
			vakant
		<% else %>
			<%= block_link_to( t('shifts.sign_up') , edit_shift_path(shift), :padding => "15px 3px" ) unless printout %>
		<% end %>
	<% else %>
		<%= shift.person.name %><br />
        <%= shift.person.phone %>
	<% end %>
</span> 