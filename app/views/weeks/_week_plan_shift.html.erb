<span class="week_plan_shift" style="<%= @dd.style_for_shift(shift) %>">
  <% if shift.free? %>
    <% if not @printout %>
      <% if current_person.my_saisons.include?(saison) %>
        <br />
        <%= block_link_to( t('shifts.sign_up'), edit_shift_path(shift), :padding => "15px 3px" ) %>
      <% else %>
        <p>vakant</p>
      <% end %>
    <% end %>
  <% else %>
    <p class="person_name"><%= shift.person.name %></p>
    <% if @printout %>
      <p class="person_phone_numbers"><%= phone_str(shift.person, :delimiter => '<br />') %></p>
    <% end %>
  <% end %>
</span> 