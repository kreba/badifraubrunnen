<% content_for :title, @title = t('weeks.new.title') %>


<%= error_messages_for :week %>

<%=t 'weeks.new.taken_numbers' %>: <%=h Week.find(:all).collect(&:number).sort.join(', ') %>

<% form_for(@week) do |f| %>
  <p>
    <b><%=t 'weeks.new.week_number_label' %></b><br />
    <%= f.text_field :number %>
  </p>

  <p>
    <%= f.submit t('Save') %>
  </p>
<% end %>