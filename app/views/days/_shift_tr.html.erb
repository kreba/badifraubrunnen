<% 
shift = shift_tr
%>
<tr valign="middle">
  <th align="left"><%=h shift.shiftinfo.description %><br><%=h shift.times_str %></th>

  
    <td align="center"><%= shift.person_string_or_free %></td>

  <% if current_person.is_staff_for? shift.saison %>
    <% if shift.free? %>
      <td align="left"><%= link_to( " #{t 'shifts.sign_up'} " , edit_shift_path(shift) ) %></td>
    <% else %>
      <td align="left" style="color: gray"> -<%=t 'shifts.taken' %>- </td>
    <% end %>
  <% end %>

</tr>
