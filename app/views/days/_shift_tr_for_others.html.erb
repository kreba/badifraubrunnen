<tr valign="middle">
  <th align="left" style="border-left: 5px solid <%= shift.saison.color %>">
    <%= full_descr(shift.shiftinfo, "%s<br>%s") %>
  </th>

  <td align="center"><%= person_string_or_free( shift ) %></td>

  <% if current_person.is_staff_for? shift.saison %>
    <td align="left">
      <% if shift.free? %>
        <% if shift.active? %>
          <%= link_to( " #{t 'shifts.sign_up'} " , edit_shift_path(shift) ) %>
        <% else %>
          <span style="color: gray"> - <%=t 'shifts.no_sign_up' %> - </span>
        <% end %>
      <% else %>
        <span style="color: gray"> - <%=t 'shifts.taken' %> - </span>
      <% end %>
    </td>
  <% end %>
</tr>
