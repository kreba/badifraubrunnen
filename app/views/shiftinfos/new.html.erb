<% content_for :title, @title = t('shiftinfos.new.title') %>
<% content_for :links do %><li><%= link_to t('shiftinfos.index.title') , shiftinfos_path %></li><% end %>


<%= error_messages_for :shiftinfo %>

<% form_for(@shiftinfo) do |f| %>
  <p>
    <b><%=t 'shiftinfo.attributes.description' %></b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <b><%=t 'shiftinfo.attributes.begin' %></b><br />
    <%= f.text_field :begin %>
  </p>

  <p>
    <b><%=t 'shiftinfo.attributes.end' %></b><br />
    <%= f.text_field :end %>
  </p>

  <p>
    <%= f.submit t'Save' %>
  </p>
<% end %>
