<% content_for :title, @title = lc('title') %>
<% content_for :admin_links do %><li><%= link_to l('shiftinfos','new','title'), new_shiftinfo_path %></li><% end %>


<table>
  <tr>
    <th><%=l 'shiftinfo','attributes','description' %></th>
    <th><%=l 'shiftinfo','attributes','begin' %></th>
    <th><%=l 'shiftinfo','attributes','end' %></th>
  </tr>

<% for shiftinfo in @shiftinfos %>
  <tr>
    <td><%=h shiftinfo.description %></td>
    <td><%=h shiftinfo.times_str %></td>
    <td><%= link_to( l('Edit'), edit_shiftinfo_path(shiftinfo) )%></td>
  </tr>
<% end %>
</table>
