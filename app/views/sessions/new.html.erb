<% content_for :title, @title = l('sessions','login') %>


<% form_tag session_path do %>
<p><label for="login"><%=l 'person','attributes','login' %></label><br/>
<%= text_field_tag 'login' %></p>

<p><label for="password"><%=l 'person','attributes','password' %></label><br/>
<%= password_field_tag 'password' %></p>

<!-- Uncomment this if you want this functionality - don't forget localization!
<p><label for="remember_me">Remember me:</label>
<%= check_box_tag 'remember_me' %></p>
-->

<p><%= submit_tag l('sessions','login') %></p>
<% end %>
