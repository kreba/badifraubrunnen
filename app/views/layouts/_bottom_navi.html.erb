<% if logged_in? %>
  <ul id="bottom_navi" class="actions">
    <% if current_person.has_role? 'staff' %>
      <%= navigation_link_unless_current( t('weeks.index.title'), weeks_path ) do end %>
      <%= yield :navigation %>
    <% end %>

    <% if current_person.has_role? 'admin' %>
      <%= yield :admin_links %>
    <% end %>

  </ul>
<% end %>