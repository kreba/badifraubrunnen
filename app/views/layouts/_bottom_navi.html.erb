<% if logged_in? %>
  <ul id="bottom_navi" class="actions">
    <% if current_person.has_role? 'staff' %>
      <li><%= link_to_unless_current( t('weeks.index.title'), weeks_path ) do end %></li>
      <%= yield :links %>
    <% end %>

    <% if current_person.has_role? 'admin' %>
      <%= yield :admin_links %>
    <% end %>

  </ul>
<% end %>